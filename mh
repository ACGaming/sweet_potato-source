#!/usr/bin/env bash

# $1: .minecraft path / @
# $2: version name in .minecraft  1.16.1
# $3: big version                 1.16

MINECRAFT="$1"
OS="$(uname -s)"

if [ "$1" = "@" ] ; then
  if [ "${OS}" = "Darwin" ] ; then # OS X
    MINECRAFT="${HOME}/Library/Application\ Support/minecraft"
  elif [ "${OS}" = "Linux" ] ; then
    MINECRAFT="${HOME}/.minecraft"
  fi
fi

VERSION="$2"

echo "gradlew building"
. ./gradlew build
echo "gradlew done"

MOD_IN_LAUNCHER="${MINECRAFT}/mods/[INDEV]sweet_potato_mod-beta-1.0.2-test.jar"
cp -i "./build/libs/sweet_potato_mod-beta-1.0.1-test.jar" "${MOD_IN_LAUNCHER}"

ASSETS="$3"

COMMAND="/Library/Java/JavaVirtualMachines/jdk-10.jdk/Contents/Home/bin/java \"-Dminecraft.client.jar=minecraft/versions/${VERSION}/${VERSION}.jar\" \"-Xdock:name=Minecraft ${VERSION}\" \"-Xdock:icon=${MINECRAFT}/assets/objects/99/991b421dfd401f115241601b2b373140a8d78572\" \"-Duser.home=null\" -XX:+UnlockExperimentalVMOptions -XX:+UseG1GC \"-XX:G1NewSizePercent=20\" \"-XX:G1ReservePercent=20\" \"-XX:MaxGCPauseMillis=50\" \"-XX:G1HeapRegionSize=16M\" -XX:-UseAdaptiveSizePolicy -XX:-OmitStackTraceInFastThrow -Xmn128m -Xmx1024m \"-Dfml.ignoreInvalidMinecraftCertificates=true\" \"-Dfml.ignorePatchDiscrepancies=true\" -XstartOnFirstThread \"-Djava.library.path=${MINECRAFT}/versions/${VERSION}/natives\" \"-Dminecraft.launcher.brand=HMCL\" \"-Dminecraft.launcher.version=3.3.175\" -cp ${MINECRAFT}/libraries/net/fabricmc/tiny-mappings-parser/0.2.2.14/tiny-mappings-parser-0.2.2.14.jar:${MINECRAFT}/libraries/net/fabricmc/sponge-mixin/0.8.2+build.24/sponge-mixin-0.8.2+build.24.jar:${MINECRAFT}/libraries/net/fabricmc/tiny-remapper/0.3.0.70/tiny-remapper-0.3.0.70.jar:${MINECRAFT}/libraries/net/fabricmc/access-widener/1.0.0/access-widener-1.0.0.jar:${MINECRAFT}/libraries/net/fabricmc/fabric-loader-sat4j/2.3.5.4/fabric-loader-sat4j-2.3.5.4.jar:${MINECRAFT}/libraries/com/google/jimfs/jimfs/1.2-fabric/jimfs-1.2-fabric.jar:${MINECRAFT}/libraries/org/ow2/asm/asm/9.0/asm-9.0.jar:${MINECRAFT}/libraries/org/ow2/asm/asm-analysis/9.0/asm-analysis-9.0.jar:${MINECRAFT}/libraries/org/ow2/asm/asm-commons/9.0/asm-commons-9.0.jar:${MINECRAFT}/libraries/org/ow2/asm/asm-tree/9.0/asm-tree-9.0.jar:${MINECRAFT}/libraries/org/ow2/asm/asm-util/9.0/asm-util-9.0.jar:${MINECRAFT}/libraries/com/google/guava/guava/21.0/guava-21.0.jar:${MINECRAFT}/libraries/net/fabricmc/intermediary/${VERSION}/intermediary-${VERSION}.jar:${MINECRAFT}/libraries/net/fabricmc/fabric-loader/0.10.6+build.214/fabric-loader-0.10.6+build.214.jar:${MINECRAFT}/libraries/com/mojang/patchy/1.1/patchy-1.1.jar:${MINECRAFT}/libraries/oshi-p