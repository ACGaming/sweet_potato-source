RETURN=$(exec "${COMMAND}")

if [ "${RETURN}" = 0 ] ; then
  rm -rf "${MOD_IN_LAUNCHER}"
  echo "Temporary file removed.
Done."
else
  echo "Temporary file not removed.
Done."
fi
